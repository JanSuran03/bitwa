{% extends 'base.html.twig' %}

{% block title %}Skupina {{ group.name }}{% endblock %}

{% block content %}
    <h1>Skupina {{ group.name }}</h1>
    <u><b>Nadřazená skupina:</b></u>
    <span>
        {% if group.parent %}
            <a href="{{ path('app_group', {'id': group.parent.id}) }}">{{ group.parent.name }}</a>
        {% else %}
            ---
        {% endif %}
    </span>

    <h3><u>Správci:</u></h3>
    <ul>
        {% for manager in group.managers %}
            <li><a href="/users/{{ manager.id }}">TODO: {{ manager.name }}</a></li>
        {% endfor %}
    </ul>

    <h3><u>Členové:</u></h3>
    <ul>
        {% for member in group.members %}
            <li><a href="/users/{{ member.id }}">TODO: {{ member.name }}</a></li>
        {% endfor %}
    </ul>

    <h3><u>Místnosti:</u></h3>
    <ul>
        {% for room in group.rooms %}
            <li><a href="{{ path('app_room', {'id': room.id}) }}">{{ room.getFullName() }}</a></li>
        {% endfor %}
    </ul>

    <h3><u>Podskupiny:</u></h3>
    <ul>
        {% for subgroup in group.childGroups %}
            <li><a href="{{ path('app_group', {'id': subgroup.id}) }}">{{ subgroup.name }}</a></li>
        {% endfor %}
    </ul>


    {% if is_granted('ROLE_ADMIN') %}

{#        {% set uniqueUsers = group.managers %}#}

{#        {% for user in group.members %}#}
{#            {% if user not in uniqueUsers %}#}
{#                {% set uniqueUsers = uniqueUsers|merge([user]) %}#}
{#            {% endif %}#}
{#        {% endfor %}#}


        <form action="{{ path('app_group_new_admin_or_user', {'groupId' : group.id}) }}" method="post">
            <h4>Přidat správce/člena</h4>
            <div class="form-fields">
                <label for="user_name">Vyberte uživatele:</label>
                <select name="_user_name" id="parent_group">
                    <option value="-1">-----</option>
                    {% for user in users | sort((a, b) => a.name <=> b.name) %}
                        <option value="{{ user.id }}">{{ user.name }}</option>
                    {% endfor %}
                </select>

                <label for="role_option">Vyberte roli:</label>
                <select name="_role_option" id="parent_group">
                    <option value="-1">Žádná</option>
                    <option value="1">Správce</option>
                    <option value="2">Člen</option>
                </select>
            </div>
            <button type="submit">Vytvořit skupinu</button>
        </form>
    {% endif %}
{% endblock %}
