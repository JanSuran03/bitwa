{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block page %}profile{% endblock %}

{% block content %}
    <h1>Uživatelský profil {{ user.name }} ({{ user.email }})</h1>
    <div class="form-block">
        <form action="... some URL" method="post">
            <h4>Change username</h4>
            <div class="form-fields">
                <label>Old username</label>
                <span>{{ user.name }}</span>

                <label for="name">New username</label>
                <input type="text" id="name" name="_name" value="" required>
            </div>

            <button type="submit">Change username</button>
        </form>
        <form action="... some URL" method="post">
            <h4>Change email</h4>
            <div class="form-fields">
                <label>Old email</label>
                <span>{{ user.email }}</span>

                <label for="email">New email</label>
                <input type="email" id="email" name="_email" value="" required>
            </div>

            <button type="submit">Change email</button>
        </form>
        <form id="changePassword" action="... some URL" method="post">
            <h4>Change password</h4>
            <div class="form-fields">
                <label for="old-password">Old password</label>
                <input type="password" id="old-password" name="_old_password" value="" required>

                <label for="new-password">New password</label>
                <input type="password" id="new-password" name="_new_password" value="" required>

                <label for="repeat-password">Repeat password</label>
                <input type="password" id="repeat-password" name="_repeat_password" value="" required>
            </div>

            <button type="submit">Change password</button>
        </form>

        <script>
            document.getElementById('changePassword').addEventListener('submit', function (event) {
                    let password = document.getElementById('new-password').value;
                    let confirm_password = document.getElementById('repeat-password').value;

                    if (password !== confirm_password) {
                        alert('Hesla se neshodují.');
                        event.preventDefault();
                    }
                }
            )
        </script>
    </div>
{% endblock %}
