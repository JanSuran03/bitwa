{% extends 'base.html.twig' %}

{% block title %}Uživatelé{% endblock %}

{% block js %}
    <script src="/js/users.js" defer></script>
{% endblock %}

{% block content %}
    <h1>Uživatelé</h1>

    <table>
        <thead>
        <tr>
            {% if is_granted("ROLE_ADMIN") %}
                <th>ID</th>
            {% endif %}
            <th>Jméno</th>
            <th>E-mail</th>
            {% if is_granted("ROLE_ADMIN") %}
                <th>Role</th>
                <th><img class="fa" src="/images/trash-red.svg" alt="delete user"></th>
                <th><img class="edit-icon" src="/images/edit.svg" alt="edit user"></th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr id="user-{{ user.id }}">
                {% if is_granted("ROLE_ADMIN") %}
                    <th>{{ user.id }}</th>
                {% endif %}
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                {% if is_granted("ROLE_ADMIN") %}
                    <td>{{ user.roles | join(", ") }}</td>
                    <td>
                        <img class="wide a" src="/images/trash-red.svg" alt="delete user"
                             onclick="deleteUser({{ user.id }}, '{{ user.name }}')">
                    </td>
                    <td>
                        <a id="edit-icon-link" href="{{ path('app_user_profile', {'userId' : user.id}) }}">
                            <img class="edit-icon" src="/images/edit.svg" alt="edit user">
                        </a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <form id="addUser" action="{{ path('app_admin_create_user') }}" method="post">
            <h2>Nový uživatel</h2>
            <div class="form-fields">
                <label for="username">Uživatelské jméno:</label>
                <input type="text" id="username" name="_username"
                       value="{{ previous_input.username | default('') }}" required>

                <label for="email">Email:</label>
                <input type="text" id="email" name="_email"
                       value="{{ previous_input.email | default('') }}" required>

                <label for="password">Heslo:</label>
                <input type="password" id="password" name="_password"
                       value="{{ previous_input.password | default('') }}" required>

                <label for="confirm_password">Potvrdit heslo:</label>
                <input type="password" id="confirm_password" name="_confirm_password"
                       value="{{ previous_input.confirm_password | default('') }}" required>
            </div>
            <button type="submit">Vytvořit uživatele</button>
        </form>
    {% endif %}
{% endblock %}
